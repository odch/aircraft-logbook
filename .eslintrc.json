{
  "env": {
    "node": true,
    "browser": true,
    "es6": true,
    "jest/globals": true,
    "cypress/globals": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "jest",
    "cypress"
  ],
  "settings": {
    "react": {
      "version": "16.4"
    }
  },
  "rules": {
    "prettier/prettier": [
      "error", {
        "semi": false,
        "singleQuote": true
      }
    ],
    "semi": [
      "error",
      "never"
    ]
  }
}
